@using Data_Access_Layer.Models

@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
    ViewBag.Title     = "Index";
}

<h1>All Department</h1>
<br/>  
<br/>  

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department </a>

<br/>
 
@if(Model.Count() > 0)
{
    <table class=" table table-striped table-hover"> 
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Na)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbady>
            @foreach(var dapartment in Model)
            {
                <tr>
                    <td>@deparment.Code</td>
                    <td>@deparment.Name</td>
                    <td>@deparment.DateOfCreation</td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning"></a>
                        <i class="fas fa-eye"></i>Details
                    </td>                    <td>@deparment.DateOfCreation</td>
                    <td>
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success"></a>
                        <i class="fas fa-edit"></i>Update
                    </td> 
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger"></a>
                        <i class="fas fa-trash"></i>Delete
                    </td>
                </tr>
                
            }
        </tbady>
    </table>
} else
{
  <div> 
      <h3> There is no Department :(</h3>
  </div>   
}